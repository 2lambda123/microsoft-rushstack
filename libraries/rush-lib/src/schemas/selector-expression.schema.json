{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "JSON Selector Expression",
  "description": "A JSON representation of selector expressions, which can be used to select sets of projects.",
  "definitions": {
    "expression": {
      "oneOf": [
        {
          "$ref": "#/definitions/simpleSelector"
        },
        {
          "$ref": "#/definitions/detailedSelector"
        },
        {
          "$ref": "#/definitions/parameter"
        },
        {
          "$ref": "#/definitions/andx"
        },
        {
          "$ref": "#/definitions/orx"
        },
        {
          "$ref": "#/definitions/notx"
        }
      ]
    },
    "simpleSelector": {
      "type": "string"
    },
    "detailedSelector": {
      "type": "object",
      "additionalProperties": false,
      "requiredProperties": ["scope", "value"],
      "properties": {
        "scope": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "parameter": {
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "maxProperties": 1,
      "patternProperties": {
        "^--.+$": {
          "$ref": "#/definitions/expression"
        }
      }
    },
    "andx": {
      "type": "object",
      "additionalProperties": false,
      "requiredProperties": ["and"],
      "properties": {
        "and": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/expression"
          }
        }
      }
    },
    "orx": {
      "type": "object",
      "additionalProperties": false,
      "requiredProperties": ["or"],
      "properties": {
        "or": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/expression"
          }
        }
      }
    },
    "notx": {
      "type": "object",
      "additionalProperties": false,
      "requiredProperties": ["not"],
      "properties": {
        "not": {
          "$ref": "#/definitions/expression"
        }
      }
    }
  },
  "type": "object",
  "$ref": "#/definitions/expression"
}
