  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "heft-node-basic-test build",
      "program": "${workspaceFolder}/lib/start.js",
      "cwd": "${workspaceFolder}/../../build-tests/heft-node-basic-test/",
      "args": ["--debug", "build", "--clean"],
      "console": "integratedTerminal",
      "sourceMaps": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "heft-node-basic-test test",
      "program": "${workspaceFolder}/lib/start.js",
      "cwd": "${workspaceFolder}/../../build-tests/heft-node-basic-test/",
      "args": ["--debug", "test", "--clean"],
      "console": "integratedTerminal",
      "sourceMaps": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "heft-node-everything-test build",
      "program": "${workspaceFolder}/lib/start.js",
      "cwd": "${workspaceFolder}/../../build-tests/heft-node-everything-test/",
      "args": ["--debug", "build", "--clean"],
      "console": "integratedTerminal",
      "sourceMaps": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "heft-node-everything-test test",
      "program": "${workspaceFolder}/lib/start.js",
      "cwd": "${workspaceFolder}/../../build-tests/heft-node-everything-test/",
      "args": ["--debug", "test", "--clean"],
      "console": "integratedTerminal",
      "sourceMaps": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "heft-oldest-compiler-test build",
      "program": "${workspaceFolder}/lib/start.js",
      "cwd": "${workspaceFolder}/../../build-tests/heft-oldest-compiler-test/",
      "args": ["--debug", "test", "--clean"],
      "console": "integratedTerminal",
      "sourceMaps": false
    }
  ]
}
