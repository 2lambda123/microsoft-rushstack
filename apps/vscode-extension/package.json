{
  "name": "@rushstack/vscode-extension",
  "displayName": "Rush",
  "description": "Official extension for Rush",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:rushProjects"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rush.openProject",
        "title": "Open",
        "category": "Rush"
      },
      {
        "command": "rush.toggleActiveProject",
        "title": "Toggle active",
        "category": "Rush"
      },
      {
        "command": "rush.activateProject",
        "title": "Activate",
        "category": "Rush",
        "icon": "$(add)"
      },
      {
        "command": "rush.deactivateProject",
        "title": "Deactivate",
        "category": "Rush",
        "icon": "$(remove)"
      },
      {
        "command": "rush.enableWatch",
        "title": "Enable watch mode",
        "category": "Rush",
        "icon": "$(eye-closed)"
      },
      {
        "command": "rush.disableWatch",
        "title": "Disable watch mode",
        "category": "Rush",
        "icon": "$(eye)"
      },
      {
        "command": "rush.buildActiveProjects",
        "title": "Build",
        "category": "Rush",
        "icon": "$(run)"
      },
      {
        "command": "rush.refreshProjects",
        "title": "Refresh",
        "category": "Rush",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rush",
          "title": "Rush",
          "icon": "resources/rush.svg"
        }
      ]
    },
    "views": {
      "rush": [
        {
          "id": "rushProjects",
          "name": "Projects"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "rush.openProject",
          "when": "view == rushProjects && viewItem =~ /^project:/"
        },
        {
          "command": "rush.toggleActiveProject",
          "when": "view == rushProjects && viewItem =~ /^project:/"
        },
        {
          "command": "rush.activateProject",
          "when": "view == rushProjects && viewItem =~ /^project:/ && viewItem not in rush.activeProjects",
          "group": "inline"
        },
        {
          "command": "rush.deactivateProject",
          "when": "view == rushProjects && viewItem =~ /^project:/ && viewItem in rush.activeProjects",
          "group": "inline"
        },
        {
          "command": "rush.activateProject",
          "when": "view == rushProjects && viewItem == group:Included",
          "group": "inline"
        },
        {
          "command": "rush.activateProject",
          "when": "view == rushProjects && viewItem == group:Excluded",
          "group": "inline"
        },
        {
          "command": "rush.deactivateProject",
          "when": "view == rushProjects && viewItem == group:Active",
          "group": "inline"
        },
        {
          "command": "rush.activateProject",
          "when": "view == rushProjects && viewItem =~ /^project:/ && viewItem not in rush.activeProjects"
        },
        {
          "command": "rush.deactivateProject",
          "when": "view == rushProjects && viewItem =~ /^project:/ && viewItem in rush.activeProjects"
        }
      ],
      "view/title": [
        {
          "command": "rush.enableWatch",
          "when": "view == rushProjects && rush.watching == false",
          "group": "navigation"
        },
        {
          "command": "rush.disableWatch",
          "when": "view == rushProjects && rush.watching == true",
          "group": "navigation"
        },
        {
          "command": "rush.buildActiveProjects",
          "when": "view == rushProjects && rush.canBuild == true && rush.watching == false",
          "group": "navigation"
        },
        {
          "command": "rush.refreshProjects",
          "when": "view == rushProjects",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@rushstack/rush-sdk": "workspace:*",
    "@rushstack/webpack-preserve-dynamic-require-plugin": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "7.1.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "12.20.24",
    "@typescript-eslint/eslint-plugin": "~5.30.3",
    "@typescript-eslint/parser": "~5.30.3",
    "eslint": "~8.7.0",
    "glob": "~7.0.5",
    "mocha": "^10.0.0",
    "typescript": "~4.7.4",
    "ts-loader": "9.4.0",
    "webpack": "~5.68.0",
    "webpack-cli": "~4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}
