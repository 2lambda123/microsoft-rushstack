{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",

  "mainEntryPointFilePath": "<projectFolder>/lib/index.d.ts",

  "apiReport": {
    "enabled": true,
    "alphaReportFileName": "<unscopedPackageName>.alpha.api.md",
    "betaReportFileName": "<unscopedPackageName>.beta.api.md",
    "publicReportFileName": "<unscopedPackageName>.public.api.md"
  },

  "docModel": {
    "enabled": true
  },

  "dtsRollup": {
    "enabled": true
  },

  "testMode": true
}
