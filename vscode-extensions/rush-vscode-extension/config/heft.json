{
  "$schema": "https://developer.microsoft.com/json-schemas/heft/heft.schema.json",
  "eventActions": [
    {
      "actionKind": "copyFiles",
      "heftEvent": "pre-compile",
      "actionId": "copy-webview",
      "copyOperations": [
        {
          "sourceFolder": "node_modules/rush-vscode-command-webview/dist",
          "destinationFolders": ["webview/rush-command-webview"],
          "includeGlobs": ["*.{html,js}"]
        }
      ]
    }
  ],
  "heftPlugins": [
    {
      "plugin": "@rushstack/heft-webpack5-plugin"
    }
  ]
}
